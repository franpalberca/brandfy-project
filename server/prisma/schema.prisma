// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_DB_URI")
}

model User {
    id            String    @id @default(auto()) @map("_id") @db.ObjectId
    userEmail     String    @unique
    userName      String?
    userImage     String?
    userCreatedAt DateTime  @default(now())
    userUpdatedAt DateTime  @updatedAt
    company       Company[]
}

model Company {
    companyId        String            @id @default(auto()) @map("_id") @db.ObjectId
    companyName      String
    companyLogo      String?
    companyCreatedAt DateTime          @default(now())
    companyUpdatedAt DateTime          @updatedAt
    companyModified  CompanyModified[]
    User             User?             @relation(fields: [userId], references: [id])
    userId           String?           @db.ObjectId
}

model CompanyModified {
    companyModifiedId        String   @id @default(auto()) @map("_id") @db.ObjectId
    companyModifiedName      String
    companyModifiedLogo      String
    companyModifiedCreatedAt DateTime @default(now())
    companyModifiedUpdatedAt DateTime @updatedAt
    Company                  Company? @relation(fields: [companyCompanyId], references: [companyId])
    companyCompanyId         String?  @db.ObjectId
}
